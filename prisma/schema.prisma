generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String?
  password  String?
  auth_type AuthType
  orders    Order[]
}

model Frame {
  id    String @id @map("_id")
  name  String @unique
  price Float
}

model Order {
  id     String @id @map("_id")
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
  price  Int
}

model Message {
  id      String @id @map("_id")
  message String
  name    String
  email   String
}

enum AuthType {
  Google
  Credentials
}

